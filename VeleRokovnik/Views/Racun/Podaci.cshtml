@using Microsoft.AspNet.Identity
@model VeleRokovnik.Models.OsobniPodaciModel

@{
    ViewBag.Title = "Podaci";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@section styles
{
    @Styles.Render("~/Content/datepicker")
}

<div class="modal show">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <p class="text-right">
                    <a href="@Url.Action("Index","Rokovnik")"><i class="glyphicon glyphicon-arrow-left"></i> Povratak na početnu stranicu</a>
                </p>
                <h3>Osobni podaci - @User.Identity.GetUserName()</h3>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Podaci", "Racun", FormMethod.Post, new { id = "podaciForm" }))
                {
                    @Html.DisplayErrors()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Ime)
                        @Html.TextBoxFor(m => m.Ime, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Prezime)
                        @Html.TextBoxFor(m => m.Prezime, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DatumRodjenja)
                        @Html.TextBoxFor(m => m.DatumRodjenja, new { @class = "form-control", id = "dobDatepicker" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NazivRokovnika)
                        @Html.TextBoxFor(m => m.NazivRokovnika, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.OpisRokovnika)
                        @Html.TextBoxFor(m => m.OpisRokovnika, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary">Izmjeni podatke</button>
                }
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/datepicker")
    <script>
        $("#dobDatepicker").datepicker({
            format: "dd.mm.yyyy",
            autoclose: true,
            clearBtn: true,
            weekStart: 1
        });
    </script>
}
